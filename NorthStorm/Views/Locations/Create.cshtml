@model NorthStorm.Models.Assistants.Location

@{
    ViewData["Title"] = "Create Location";
}

<h1>Create Location</h1>

<div>
    <form asp-action="Create">
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ParentLocationId" class="control-label">Parent Location</label>
            <select asp-for="ParentLocationId" class="form-control">
                <option value="">Select Parent Location</option>
                @foreach (var location in ViewBag.ParentLocations)
                {
                    <option value="@location.Value">@location.Text</option>
                }
            </select>
            <span asp-validation-for="ParentLocationId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>
