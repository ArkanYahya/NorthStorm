@model NorthStorm.Models.Recruitment

@{
    ViewData["Title"] = "تعديل أمر إداري";
}

<h1>التعيينات - تعديل أمر إداري</h1>

<h4></h4>
<hr />
<p dir="ltr">
    <br/>
</p>
<div class="card bg-light mb-3">
    <div class="card-header">بيانات الأمر الإداري</div>
    <form asp-action="Edit" class="card-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row col-md-12">
            <div class="form-group col-md-4">
                <label asp-for="ReferenceNo" class="control-label"></label>
                <input asp-for="ReferenceNo" class="form-control" />
                <span asp-validation-for="ReferenceNo" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2">
                <label asp-for="ReferenceDate" class="control-label"></label>
                <input asp-for="ReferenceDate" class="form-control" />
                <span asp-validation-for="ReferenceDate" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Subject" class="control-label"></label>
                <input asp-for="Subject" class="form-control" />
                <span asp-validation-for="Subject" class="text-danger"></span>
            </div>
            <div class="form-group col-md-2 align-self-end text-md-center">
                <input type="submit" value="حفظ" class="btn btn-primary w-75" />
            </div>
        </div>
    </form>
    <div class="card-footer">
        <br />

    </div>
</div>

<div>
    <a asp-action="Index">العودة إلى القائمة</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
