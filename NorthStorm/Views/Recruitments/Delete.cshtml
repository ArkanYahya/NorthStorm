@model NorthStorm.Models.Recruitment

@{
    ViewData["Title"] = "حذف أمر إداري";
}

<h1>التعيينات - حذف أمر إداري</h1>

<hr />
<p dir="ltr">
    <h4 class="text-danger">هل أنت متأكد من أنك تريد حذف الأمر الإداري؟</h4>
</p>
<div class="card bg-light mb-3">
    <div class="card-header">بيانات الأمر الإداري</div>
    <div class="card-body">
        <div class="row col-md-12">
            <div class="form-group col-md-4">
                <div class="control-label">
                    @Html.DisplayNameFor(model => model.ReferenceNo)
                </div>
                <div class="form-control">
                    @Html.DisplayFor(model => model.ReferenceNo)
                </div>
            </div>
            <div class="form-group col-md-2">
                <div class="control-label">
                    @Html.DisplayNameFor(model => model.ReferenceDate)
                </div>
                <div class="form-control">
                    @Html.DisplayFor(model => model.ReferenceDate)
                </div>
            </div>
            <div class="form-group col-md-4">
                <div class="control-label">
                    @Html.DisplayNameFor(model => model.Subject)
                </div>
                <div class="form-control">
                    @Html.DisplayFor(model => model.Subject)
                </div>
            </div>
            <form asp-action="Delete" class="form-group col-md-2 align-self-end text-md-center">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="حذف" class="btn btn-danger w-75" />
            </form>
        </div>
    </div>
    <div class="card-footer">
        <br />

    </div>
</div>

<div>
    <a asp-action="Index">إلغاء</a>
</div>
